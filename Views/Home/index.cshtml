        <div class="form-container">
            <div class="regHeader_container">
                <h1>Register</h1>
            </div>

            <form asp-action="Redgister" asp-controller="Home" method="POST">
                <a href="/signin">Sign in.</a>

                <span asp-validation-for="FirstName"></span>
                <input asp-for="FirstName" placeholder="First Name">

                <span asp-validation-for="LastName"></span>
                <input asp-for="LastName" placeholder="Last Name">

                <span asp-validation-for="Email"></span>
                <input asp-for="Email" placeholder="Email">

                <span asp-validation-for="Password"></span>
                <input asp-for="Password" placeholder="Password">

                <span asp-validation-for="Confirm"></span>
                <input asp-for="Confirm" placeholder="Confirm Password">

                <button type="submit">submit</button>


                @* <input class="btn" type="submit" value="submit"> *@

            </form>
        </div>

        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
